<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <Button
            android:id="@+id/btn_to_rsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到RSA"/>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试"/>
        <Button
            android:id="@+id/btn_test_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试读取文件"/>
        <Button
            android:id="@+id/btn_test_post_file_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试将文本内容传到服务器"/>
        <Button
            android:id="@+id/btn_test_deleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试文件删除"/>
        <Button
            android:id="@+id/btn_test_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试权限"/>
        <Button
            android:id="@+id/btn_test_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试文件存储"/>


        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入账号"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入密码"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录玩安卓"/>

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入id"/>

        <Button
            android:id="@+id/btn_get_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取内容"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            />

    </LinearLayout>
</ScrollView>
